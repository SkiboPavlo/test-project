<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.content %></td>
        <td><%= Category.find(post.category_id).name %></td>
        <td><%= link_to 'Show', category_post_path(post.category_id, post) %></td>
        <td><%= link_to 'Edit', edit_category_post_path(post.category_id, post) %></td>
        <td><%= link_to 'Destroy', category_post_path(post.category_id, post), method: :delete,
                         data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_category_post_path %>
<%= link_to 'Categories', categories_path %>
